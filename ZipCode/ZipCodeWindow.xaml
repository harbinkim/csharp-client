<Window x:Class="ZipCode.ZipCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZipCode"
        mc:Ignorable="d"
        Title="Zip Code Window" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="uXZipCodeTextBox" Grid.Row="0" TextChanged="TextBox_TextChanged"></TextBox>

        <Button x:Name="uxSubmitButton" Grid.Row="1" IsEnabled="False">Submit</Button>
    </Grid>
</Window>
